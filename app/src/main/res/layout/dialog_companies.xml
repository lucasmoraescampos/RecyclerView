<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <android.support.v7.widget.CardView
        android:id="@+id/cvCompanie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="50dp"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/companie_photo"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@drawable/bretas" />

            <TextView
                android:id="@+id/companie_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/companie_photo"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:text="Bretas"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/companie_hr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/companie_name"
                android:layout_toRightOf="@+id/companie_photo"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:text="Aberto até às 21:00"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/companie_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/companie_hr"
                android:layout_toRightOf="@+id/companie_photo"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:text="5 km daqui"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>